<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.studio216.fbs.ISBNActivity">

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/activity_isbn_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="ISBN号"
        android:textSize="30dp"
        bootstrapbutton:be_roundedCorners="true"
        bootstrapbutton:be_state="success" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/activity_isbn_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_isbn_edit_text"
        android:layout_margin="20dp"
        android:text="开始搜索"
        android:textSize="20sp"
        bootstrapbutton:bb_icon_left="fa-search"
        bootstrapbutton:bb_roundedCorners="true"
        bootstrapbutton:bb_type="success" />

</RelativeLayout>
